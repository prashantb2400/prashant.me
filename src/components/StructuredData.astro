---
export interface Props {
  type: "BlogPosting" | "Person" | "WebSite";
  data: any;
}

const { type, data } = Astro.props;

let structuredData = {};

if (type === "BlogPosting") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    headline: data.title,
    description: data.description,
    author: {
      "@type": "Person",
      name: data.author || "Prashant Bhushan",
      url: "https://prashantbasthana.me/about",
    },
    datePublished: data.pubDatetime.toISOString(),
    dateModified: data.modDatetime?.toISOString() || data.pubDatetime.toISOString(),
    publisher: {
      "@type": "Person",
      name: "Prashant Bhushan",
      logo: {
        "@type": "ImageObject",
        url: "https://prashantbasthana.me/peter-avatar.jpg",
      },
    },
    mainEntityOfPage: {
      "@type": "WebPage",
      "@id": data.url,
    },
    image: data.ogImage || "https://prashantbasthana.me/peter-avatar.jpg",
    articleSection: data.tags?.[0] || "Technology",
    keywords: data.tags?.join(", ") || "",
    wordCount: data.wordCount,
    timeRequired: data.readingTime,
  };
} else if (type === "Person") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "Person",
    name: "Prashant Bhushan",
    url: "https://prashant.me",
    image: "https://prashantbasthana.me/peter-avatar.jpg",
    sameAs: [
      "https://github.com/prashantb2400",
      "https://twitter.com/knightofslights",
      "active: false",
    ],
    jobTitle: "Software Engineer",
    description:
      "Law & tech enthusiast from Jaunpur, India. Learning, building and figuring it out.",
  };
} else if (type === "WebSite") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: "Prashant Bhushan",
    url: "https://prashant.me",
    description:
      "Law & tech enthusiast from Jaunpur, India. Learning, building and figuring it out.",
    author: {
      "@type": "Person",
      name: "Prashant Bhushan",
    },
    potentialAction: {
      "@type": "SearchAction",
      target: "https://prashantbasthana.me/search?q={search_term_string}",
      "query-input": "required name=search_term_string",
    },
  };
}
---

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />